@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics

.ig
  h3
    color ColorHeading
    float left
    clear left
    margin 0px
    margin-top 10px
  .kosti
    position relative
    float left
    clear left
    width 100%
    margin-top 10px
    transition height 0.6s
    .kost
      position absolute
      width 20px
      height 20px
      border-radius 2px
      margin-right 8px
      margin-bottom 8px
      background #aaa
      transition background 0.6s, transform 0.6s, top 0.6s, left 0.6s
      transform scale(1)
      z-index 3
      cursor help
